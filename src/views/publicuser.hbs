<div class="col-md-11 mx-5 my-5 bg-white rounded py-3">
    {{#if user}}
    <h1>@{{user.username}}</h1>
    {{/if}}
    <table id="history" class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Pages</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Date</th>
            <th scope="col">Comments</th>
        </tr>
        </thead>
    <tbody>
    <!-- insert all logs here -->
    {{#each publicLogs}}
        <tr>
            <td>{{this.number}}</td>
            <td>{{this.title}}</td>
            <td>{{this.author}}</td>
            <td>{{dateFormat this.date "dddd, MMMM Do YYYY" utc}}</td>
            <td>{{this.comments}}</td>
        </tr>
        {{/each}}
    </tbody>
    </table>
</div>

