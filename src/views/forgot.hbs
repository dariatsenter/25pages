<div class="col-md-2 center_div text-center mt-5 bg-white rounded py-3">
{{#if message}}
<div class="error">
	<div class="error-text">
		{{message}}
	</div>
</div>
{{/if}}
	<h5>Forgot your password?</h5>
	<form method="POST" action="/forgot">
		<div class="form-group">
			<input type="text" placeholder="email" name="email" required value="" class="form-control text-center">
		</div>
		<div class="form-group">
			<button type="submit" id="submit" class="btn btn-primary btn-block login">Reset password</button>
		</div>

	</form>
</div>
