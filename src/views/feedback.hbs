{{#if status}}
<h1>{{status}}</h1>
{{else}}
<div class="center-container" style="margin-top:2%">
  <div class="auth feedback">
    <h1> Help us make the club better!</h1>
    <form method="POST" action="/feedback" id="feedbackForm">
      <div class="inline-input">
      <input type="text" style="width:44%;display:inline-block;margin-right:6px" placeholder="Your name" name="name" >
      <input type="text" style="width:44%;display:inline-block;margin-left:6px" placeholder="Your email" name="email" >
      </div>
      <input type="text" placeholder="Subject" name="subject" placeholder="Subject...">

      <textarea name="message" rows="10" cols="30" placeholder="Comments, concerns, bugs and other issues..."></textarea>

      <input type="submit"></input>
    </form>

    <form action="https://www.patreon.com/dashatsenter">
        <input type="submit" value="Support on Patreon"/>
    </form>
  </div>
</div>

{{/if}}
